# =============================================================================
# Production Environment Variables for TaxPlanAdvisor Backend
# Copy this to .env and fill in your actual values
# =============================================================================

# Django Settings
DJANGO_ENV=production
DJANGO_SECRET_KEY=your-super-secret-key-here-min-50-chars-random
JWT_SIGNING_KEY=your-jwt-signing-key-different-from-secret
DEBUG=False
ALLOWED_HOST=api.yourdomain.com
FRONTEND_URL=https://yourapp.vercel.app
BACKEND_URL=https://api.yourdomain.com

# =============================================================================
# PostgreSQL Database (AWS RDS or similar)
# =============================================================================
DB_NAME=taxplanadvisor
DB_USER=taxplanadvisor_user
DB_PASSWORD=your-strong-database-password
DB_HOST=your-rds-endpoint.region.rds.amazonaws.com
DB_PORT=5432
DB_SSLMODE=require

# =============================================================================
# Redis (for WebSocket Channels) - Upstash or ElastiCache
# =============================================================================
REDIS_URL=rediss://default:your-password@your-redis-host:6379

# =============================================================================
# AWS S3 (Already configured)
# =============================================================================
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-s3-bucket-name
AWS_S3_REGION_NAME=ap-south-1

# =============================================================================
# Google OAuth (for Google Login + Meet Links)
# =============================================================================
GOOGLE_CLIENT_ID=your-google-oauth-client-id.apps.googleusercontent.com
GOOGLE_OAUTH_CLIENT_ID=your-google-oauth-client-id
GOOGLE_OAUTH_CLIENT_SECRET=your-google-oauth-secret
GOOGLE_OAUTH_REFRESH_TOKEN=your-google-refresh-token

# =============================================================================
# Email (Gmail SMTP)
# =============================================================================
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# =============================================================================
# Razorpay Payment Gateway
# =============================================================================
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-secret
RAZORPAY_WEBHOOK_SECRET=your-razorpay-webhook-secret

# =============================================================================
# Exotel Call Integration
# =============================================================================
EXOTEL_API_KEY=your-exotel-api-key
EXOTEL_API_TOKEN=your-exotel-api-token
EXOTEL_SID=your-exotel-sid
EXOTEL_CALLER_ID=your-exotel-caller-id
EXOTEL_SUBDOMAIN=api.exotel.com
SALES_TEAM_PHONE=+919876543210

# =============================================================================
# Sandbox GST API
# =============================================================================
SANDBOX_API_KEY=your-sandbox-api-key
SANDBOX_API_SECRET=your-sandbox-api-secret
